---
const { title, description, price, sold } = Astro.props;
import f from '../../public/Andadera.png'
---

<div class="item">
	<img src=`../../public/${title}.png` alt="Item."/>
	<div class="text">
		<h2>{title}</h2>
		<p class="price">${price} pesos</p>
		<p class="description">{description}</p>
	</div>
	{sold && <span class="sold">Vendido</span>}
</div>
<style>
	.item {
		position: relative;
		width: 94%;
		padding: 10px;
		background-color: #23262d;
		border-radius: 24px;
		transition: all 0.6s;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	img {
		border-radius: 16px;
		width: 100%;
		height: 60%;
		object-fit: cover;
	}
	h2 {
		color: rgb(var(--accent-light));
		margin: 0 2px;
	}
	.text {
		padding: 6px;
	}
	p {
		margin: 0 2px;
		line-height: 1.8rem;
		height: 30px;

		white-space: nowrap; 
		overflow: hidden; 
		text-overflow: ellipsis; 
	}
	.price {
		display: inline-block;
		background-color: rgb(var(--accent-light));
		color: black;
		font-weight: bold;
		border-radius: 0px 16px 16px 0;
		padding: 8px 6px;
		margin-bottom: 6px;
	}
	.item:is(:hover, :focus-within) {
		transform: scale(1.1);
	}
	.sold {
		letter-spacing: 10px;
		font-weight: bolder;
		rotate: -60deg;
		width: 300px;
		background-color: rgb(215, 94, 94);
		border-radius: 16px;
		font-size: 2rem;
		position: absolute;
		text-align: center;
		border: white 5px solid;
		transform-origin: left;
		top: 75%;
		left: 20%;
	}
</style>
